<h3 class="ui header">{{t "forms.i-i-s-itogovaya-peredelanaya-заказы-покуп-e.caption"}}</h3>

<form class="ui form flexberry-vertical-form" role="form">
  {{flexberry-error error=error}}
  <div class="field">
    <div class="flexberry-edit-panel">
      {{#unless readonly}}
        <button class="ui button save-button" {{action "save"}}>
          {{t "forms.edit-form.save-button-text"}}
        </button>
        {{#unless model.isNew}}
          <button class="ui button save-del-button" {{action "delete"}}>
            {{t "forms.edit-form.delete-button-text"}}
          </button>
        {{/unless}}
      {{/unless}}
      <button class="ui button close-button" {{action "close"}}>
        {{t "forms.edit-form.close-button-text"}}
      </button>
    </div>
  </div>
  <div class="field flexberry-validationsummary-container">
    <div class="sixteen wide">
      {{flexberry-validationsummary errors=(v-get validationObject "messages")}}
    </div>
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.номер
      class=(if (v-get validationModel "номер" "isInvalid") "error")
      label=(t "forms.i-i-s-itogovaya-peredelanaya-заказы-покуп-e.номер-caption")
      data-test-i-i-s-itogovaya-peredelanaya-заказы-покуп-e-номер=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "номер" "message")}}
  </div>
  <div class="field">
    <label>{{t "forms.i-i-s-itogovaya-peredelanaya-заказы-покуп-e.дата-caption"}}</label>
    {{flexberry-simpledatetime
      type="date"
      readonly=readonly
      value=model.дата
      class=(if (v-get validationModel "дата" "isInvalid") "error")
      data-test-i-i-s-itogovaya-peredelanaya-заказы-покуп-e-дата=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "дата" "message")}}
  </div>
  <div class="field">
    <label>{{t "forms.i-i-s-itogovaya-peredelanaya-заказы-покуп-e.клиенты-caption"}}</label>
    {{flexberry-lookup
      choose="showLookupDialog"
      remove="removeLookupValue"
      value=model.клиенты
      displayAttributeName="фИО"
      autocomplete=true
      relationName="клиенты"
      projection="КлиентыL"
      title=(t "forms.i-i-s-itogovaya-peredelanaya-заказы-покуп-e.клиенты-caption")
      readonly=readonly
      componentName="клиентыLookup"
      class=(if (v-get validationModel "клиенты" "isInvalid") "error")
      data-test-i-i-s-itogovaya-peredelanaya-заказы-покуп-e-клиенты=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "клиенты" "message")}}
  </div>
  <div class="field">
    <label>{{t "forms.i-i-s-itogovaya-peredelanaya-заказы-покуп-e.тЧЗаказПок-caption"}}</label>
    {{flexberry-groupedit
      componentName="тЧЗаказПокGroupEdit"
      mainModelProjection=modelProjection
      modelProjection=modelProjection.attributes.тЧЗаказПок
      content=model.тЧЗаказПок
      readonly=readonly
      orderable=false
      class=(if (v-get validationModel "тЧЗаказПок" "isInvalid") "error")
      data-test-i-i-s-itogovaya-peredelanaya-заказы-покуп-e-тЧЗаказПок=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "тЧЗаказПок" "message")}}
  </div>
</form>
